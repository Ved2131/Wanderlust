<% layout('/layouts/boilerplate') -%>

<style>
    #filters{
        display:flex;
        flex-wrap:wrap;
    }

    .filter{
        text-align:centre;
        margin-right: 0.7rem;
        margin: 1.5rem;
        opacity: 0.9;
        align-items: centre;
        color: rgb(65, 63, 63);
    }
    .filter:hover{
        opacity: 1;
        color:black;
        transition: all 0.4s;
        cursor: pointer;
    }

    .filter p{
        font-size: 0.8rem;
    }

    .tax-info{
        display: none;
    }

    .tax-toggle{
        border: 0.5px solid rgb(78, 74, 74);
        border-radius: 1rem;
        padding: 1rem;
        height: 3.25rem;
        margin:2rem;
        margin-top: 1rem;
        display: flex;
        align-items: centre;
        color: rgb(61, 57, 57);
    }
    .tax-toggle label:hover{
        cursor: pointer;
        color: black;
        transition: all 0.4s;
    }

</style>

<div id="filters">
    <div class="filter">
       <div><i class="fa-solid fa-fire"></i></div> 
        <p>Trending</p>
    </div>

    <div class="filter">
       <div><i class="fa-solid fa-bed"></i></div> 
        <p>Rooms</p>
    </div>

    <div class="filter">
       <div><i class="fa-solid fa-mountain-city"></i></div> 
        <p>Iconic Cities</p>
    </div>

    <div class="filter">
       <div><i class="fa-solid fa-mountain"></i></div> 
        <p>Mountains</p>
    </div>

    <div class="filter">
       <div><i class="fa-brands fa-fort-awesome"></i></div> 
        <p>Castles</p>
    </div>

    <div class="filter">
       <div><i class="fa-solid fa-tree"></i></div> 
        <p>Trees</p>
    </div>

    <div class="filter">
       <div><i class="fa-solid fa-person-swimming"></i></div> 
        <p>Amazing Pools</p>
    </div>

    <div class="filter">
       <div><i class="fa-solid fa-tractor"></i></div> 
        <p>Farms</p>
    </div>

    <div class="filter">
       <div><i class="fa-brands fa-galactic-senate"></i></div> 
        <p>Arctic</p>
    </div>

    

    <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>  
          </div>
    </div>
</div>

<body>
    <h3>All Listings</h3> 
    <div class="row row-cols-lg-3 row-cols-md-1 row-cols-sm-1 mt-3">
        <%for(let l of list){%>
            <a href="/listings/<%=l._id%>" class="listing-link">
                <div class="card col listing-card" style="width:27rem;">
                    <img src="<%=l.image.url%>" class="card-img-top img-set" alt="listing_image ">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <p class="card-text">
                        <b><%=l.title%></b> <br><br>
                        <%=l.price.toLocaleString("en-IN")%>/night
                        <i class="tax-info"> &nbsp;+18% GST</i>
                    </p>
            
                    </div>
                </div>
            </a>
        <%}%>
    </div>

  

<script>
    let taxSwitch=document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click",()=>{
    let taxInfo=document.getElementsByClassName("tax-info");
    for(info of taxInfo){
        if(info.style.display!="inline"){
            info.style.display="inline";
        }else{ 
            info.style.display="none";
        }
    }
    })

   

</script>

</body>  


